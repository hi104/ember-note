<div class='note-edit'>
  <form class="note-edit-form" role="form">
  <div class='note-top-control-wrap'>
    <div class='form-input-control-wrap'>
      {{view Ember.TextField id="inputName" class="form-input-control" valueBinding="name" placeholder='Name'}}
      <p style='display:none' class='error-message' ><span>{{errors.name}}</span></p>
    </div>
    <div class='form-input-control-wrap'> <i class="fa fa-tags"></i>
      {{view Ember.TextField id="inputTag" class="form-input-control" valueBinding="tag_list" placeholder='Tags'}}
    </div>
  </div>
    {{!--
    <label for="inputNote" class="control-label">Note</label>
    <p class='error-message'><span>{{errors.content}}</span></p>
    {{view Ember.TextArea rows="15" id="inputNote" class="form-control ace-wrapper" valueBinding="content.content"}}
    --}}
    {{!----}}
    {{view App.AceEditorView contentBinding="content.content"}}

    <div class="form-group note-edit-bottom-control">
      <div class="col-sm-10">
        {{#if isSaving}}
          <button type="submit" class="btn btn-primary">
            Saving....
          </button>
        {{else}}
          <button {{action 'save'}} type="submit" class="btn btn-primary">
            Save
          </button>
        {{/if }}
        <button {{action 'cancel'}} type="submit" class="btn btn-default">Cancel</button>
      </div>
    </div>
  </form>
</div>
<div class='preview'>
  {{markdown content.content}}
</div>