<div class='note-edit'>
  <form class="form-horizontal" role="form">
    <div class="form-group">
      <label for="inputName" class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        <p class='error-message' ><span>{{errors.name}}</span></p>
        {{view Ember.TextField id="inputName" class="form-control" valueBinding="name"}}
      </div>
    </div>
    <div class="form-group">
      <label for="inputTag" class="col-sm-2 control-label">Tag</label>
      <div class="col-sm-10">
        {{view Ember.TextField id="inputTag" class="form-control" valueBinding="tag_list"}}
      </div>
    </div>

    <div class="form-group">

      <div class="col-sm-12">
        <label for="inputNote" class="control-label">Note</label>
        <p class='error-message'><span>{{errors.content}}</span></p>
        {{view Ember.TextArea rows="15" id="inputNote" class="form-control" valueBinding="content.content"}}
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        {{#if isSaving}}
          <button type="submit" class="btn btn-primary">
            Saving....
          </button>
        {{else}}
          <button {{action 'save'}} type="submit" class="btn btn-primary">
            Save
          </button>
        {{/if }}
        <button {{action 'cancel'}} type="submit" class="btn btn-default">Cancel</button>
      </div>
    </div>
  </form>
</div>
